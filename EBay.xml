  <RazorFunctions>
    <![CDATA[
      string FetchItemIds()
      {
        string[] lines = ((string)Model.Items).Trim().Split('\n').Select(e => e.Trim()).Where(e => !string.IsNullOrEmpty(e)).Take(20).ToArray();
        return string.Join(",",lines.Select((e, i) => Utils.UrlEncode(e)).ToArray());
      }
    ]]>
  </RazorFunctions>

