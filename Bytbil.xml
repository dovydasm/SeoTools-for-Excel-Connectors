          @: &ModelYearRange.To=@Model.MaxYear
        }
        ]]>
      </Fetch.Url>
    </Fetch>
    <Parse>
      <XPath Expr="//div[@@class='result-count-label']/span[@@class='number']">
        <XPath Expr="." Id="Count" Title="Count" Converter="Long" DefaultValue="0" HelpText=""/>
			</XPath>
    </Parse>
